{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUnusedLocals": true,
      "pretty": true,
      
      "lib": [
        "esnext",
        "dom",
      ],
      "jsx": "react-jsx",
      "typeRoots" : ["node_modules/@types", "src/types"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
  }
  